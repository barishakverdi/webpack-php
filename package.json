{
  "name": "php-webpack-tailwind",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "postinstall": "cp -R node_modules/starter-icons/webfonts public/assets",
    "dev": "webpack --watch --mode development",
    "build:tailwind": "npx tailwindcss -i ./src/style/tailwind.css -o ./public/assets/tailwind.css --minify",
    "build:style": "npx tailwindcss -i ./src/style/style.css -o ./public/assets/style.css --minify",
    "watch:tailwind": "npx tailwindcss -i ./src/style/tailwind.css -o ./public/assets/tailwind.css --watch",
    "watch:style": "npx tailwindcss -i ./src/style/style.css -o ./public/assets/style.css --watch",
    "watch:sass": "sass --watch --style=compressed ./src/style/icons.scss ./public/assets/icons.css",
    "build": "npm run build:tailwind && npm run build:style && NODE_ENV=production webpack --config webpack.config.cjs --mode production",
    "watch": "concurrently \"npm run dev\" \"npm run watch:tailwind\" \"npm run watch:style\" \"npm run watch:sass\""
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "autoprefixer": "^10.4.20",
    "babel-loader": "^9.1.3",
    "browser-sync": "^3.0.2",
    "browser-sync-webpack-plugin": "^2.3.0",
    "concurrently": "^8.2.2",
    "cpy": "^11.1.0",
    "css-loader": "^7.1.2",
    "html-webpack-plugin": "^5.6.0",
    "mini-css-extract-plugin": "^2.9.0",
    "postcss": "^8.4.41",
    "postcss-loader": "^8.1.1",
    "sass": "^1.77.8",
    "sass-loader": "^16.0.0",
    "starter-icons": "1.1.5",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.10",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  },
  "dependencies": {
    "gsap": "^3.12.5",
    "scrollreveal": "^4.0.9",
    "swiper": "^11.1.9"
  }
}
